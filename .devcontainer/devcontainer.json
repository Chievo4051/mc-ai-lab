{
  "name": "Minecraft AI Lab (Complete)",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "false",
      "installGradle": "false"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [25565, 3000],
  "portsAttributes": {
    "25565": { "label": "Minecraft Server" },
    "3000": { "label": "AI Viewer" }
  }
}}
